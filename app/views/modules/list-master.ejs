<% if( member.yourMasterId && member.yourMasterId !== '' ) { %>
  <div class="box-member ">
    <a href="/membro/<%= master.name %>">
      <div class="thumb" style="background-image: url( /uploads/<%= master.avatar %> )"></div>
    </a>

    <a href="/membro/<%= master.name %>" class="lnk-3">
      <span class="name"><%= master.name %></span>
    </a>

    <div class="wrap-main">
      <span class="transition-color-2">Mestre</span>
    </div>

    <% if( connected && connected == member._id ) { %>
      <div class="wrap-mask" data-member-id="<%= member._id %>" data-master-id="<%= master._id %>" data-name="<%= member.name %>" data-toggle="modal" data-target="#modal-unlink-master">
        <div class="remove">
          <svg viewBox="0 0 365.71733 365" xmlns="http://www.w3.org/2000/svg">
            <path fill="white" d="m356.339844 296.347656-286.613282-286.613281c-12.5-12.5-32.765624-12.5-45.246093 0l-15.105469 15.082031c-12.5 12.503906-12.5 32.769532 0 45.25l286.613281 286.613282c12.503907 12.5 32.769531 12.5 45.25 0l15.082031-15.082032c12.523438-12.480468 12.523438-32.75.019532-45.25zm0 0"/>
            <path fill="white" d="m295.988281 9.734375-286.613281 286.613281c-12.5 12.5-12.5 32.769532 0 45.25l15.082031 15.082032c12.503907 12.5 32.769531 12.5 45.25 0l286.632813-286.59375c12.503906-12.5 12.503906-32.765626 0-45.246094l-15.082032-15.082032c-12.5-12.523437-32.765624-12.523437-45.269531-.023437zm0 0"/>
          </svg>
        </div>
      </div>
    <% } %>
  </div>

  <div class="modal fade" id="modal-unlink-master" tabindex="-1" role="dialog" aria-labelledby="confirm" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header alert-info" role="alert">
          <span class="align-middle">Tem certeza que deseja se desvinvular do seu mestre?</span>

          <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/master/unlink" method="post">
          <input type="hidden" class="form-control" name="member-id">
          <input type="hidden" class="form-control" name="master-id">
          <input type="hidden" class="form-control" name="name">

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            <button type="submit" class="btn btn-primary">Confirmar</button>
          </div>
        </form>
      </div>
    </div>
  </div>

<% } %>
